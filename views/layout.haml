%head
  %meta{"http-equiv" => "Content-type", "content" => "text/html; charset=utf-8"}
  %title= yield_content(:title) ? "#{yield_content :title} | Kings Players" : "Kings Players"
  %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js", :type=>"text/javascript"}
  %script{:src => "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.10/jquery-ui.min.js", :type => "text/javascript"}
  %script{:src => "/js/stage.js", :type => "text/javascript"}
  %script{:src => "/js/temple.js", :type => "text/javascript"}
  %link{:href=> "http://fonts.googleapis.com/css?family=Lobster|Lato", :rel => "stylesheet", :type => "text/css"}
  %link{:rel => "stylesheet", :href => "/styles/style.css", :type => "text/css"}
  %link{:rel => "stylesheet", :href => "/styles/stage.css", :type => "text/css"}
  /[if lt IE 7.]
    %script{:defer => 'defer', :src => "/js/pngfix.js", :type => "text/javascript"}
%body
  #outer
    #header
    #navigation
      = link_to "Current Season", "/"
      = link_to "Tickets", "/tickets/"
      = link_to "Directions", "/directions/"
      = link_to "Volunteer", "/volunteer/"
      = link_to "About Us", "/about/"
    #content
      = yield
    #footer
      %p
        The Kings Players theatre group was established in 1963 by Audrey
        Leibold with the idea of bringing quality live theatre to Hanford,
        California. We invite you to browse our site, attend
        a show or volunteer your talents!
      %p.small
        Copyright &copy; 2011 Brandon Tilley
